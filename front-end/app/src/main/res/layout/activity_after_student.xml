<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:background="#F8D0D5"
        tools:context=".Student_Activity">

        <TextView
            android:id="@+id/fullname"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

            <Button
                android:id="@+id/profile"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/background_button"
                android:drawableTop="@drawable/profile"
                android:text="Thông tin cá nhân"
                android:textSize="12dp"></Button>

        <Button
            android:id="@+id/listStudent"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@+id/profile"
            android:background="@drawable/background_button"
            android:drawableTop="@drawable/list"
            android:text="Danh sách lớp"
            android:textSize="12dp"></Button>

        <Button
            android:id="@+id/listSubject"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/background_button"
            android:drawableTop="@drawable/calendar"
            android:text="Lịch học"
            android:textSize="12dp"></Button>

        <Button
            android:id="@+id/list_score"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="250dp"
            android:layout_toRightOf="@+id/listSubject"
            android:background="@drawable/background_button"
            android:drawableTop="@drawable/result"
            android:text="Kết quả học tập"
            android:textSize="12dp"></Button>

            <Button
                android:id="@+id/a5"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="435dp"
                android:background="@drawable/background_button"
                android:drawableTop="@drawable/event"
                android:text="Sự kiện"
                android:textSize="12dp"></Button>

            <Button
                android:id="@+id/btndangxuat"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="435dp"
                android:layout_toRightOf="@+id/a5"
                android:background="@drawable/background_button"
                android:drawableTop="@drawable/logout"
                android:text="Đăng xuất"
                android:textSize="12dp"></Button>

    </RelativeLayout>
</ScrollView>