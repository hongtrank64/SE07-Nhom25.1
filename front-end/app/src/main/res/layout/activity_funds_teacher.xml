<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Funds_Teacher_Activity"
    android:background="#FBD7DA">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vien"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TableLayout
                android:id="@+id/table_list_funds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Quỹ lớp"
                    android:textSize="40dp">

                </TextView>

                <TableRow
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px">

                    <TextView
                        android:id="@+id/ID_funds"
                        android:layout_width="70dp"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="STT"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/money_name"
                        android:layout_width="350dp"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="Các khoản"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/money_fly"
                        android:layout_width="180dp"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="Số tiền"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/funds_type"
                        android:layout_width="180dp"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="Loại quỹ"
                        android:textSize="20sp" />

                </TableRow>

            </TableLayout>

        </ScrollView>
    </HorizontalScrollView>
</RelativeLayout>