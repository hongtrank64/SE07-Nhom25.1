<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:background="#F8D0D5"
        tools:context=".Insert_Funds_Activity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="Khoản chi"
            android:textColor="#000000"
            android:textSize="40dp" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="190dp"
            android:text="STT:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/insert_fundsID"
            android:layout_width="285dp"
            android:layout_height="35dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="187dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/vien"
            android:paddingLeft="10dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:text="Tên khoản:"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/insert_fundsName"
            android:layout_width="285dp"
            android:layout_height="35dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="245dp"
            android:background="@drawable/vien"
            android:paddingLeft="10dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="310dp"
            android:text="Số tiền:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/insert_money"
            android:layout_width="285dp"
            android:layout_height="35dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="305dp"
            android:background="@drawable/vien"
            android:paddingLeft="10dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="370dp"
            android:text="Loại quỹ:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/insert_Types"
            android:layout_width="285dp"
            android:layout_height="35dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="367dp"
            android:background="@drawable/vien"
            android:ems="10"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="400dp"
            android:text="*0: Khoản thu, 1: Khoản chi"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_insertFunds"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="470dp"
            android:layout_marginBottom="20dp"
            android:background="#9A71E3"
            android:text="Lưu" />


    </RelativeLayout>
</ScrollView>
